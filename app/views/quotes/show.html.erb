<main class="container">
  <%= link_to sanitize("&larr; Back to quotes"), quotes_path %>
  <div class="header">
    <h1>
      <%= @quote.name %>
    </h1>
  </div>

  <%= link_to "New reply",
              new_quote_reply_path(@quote),
              class: "btn btn--light" %>

  <%= render @replies, quote: @quote %>

</main>
