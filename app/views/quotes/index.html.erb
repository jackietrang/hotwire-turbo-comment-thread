<main class="container">
  <div class="header">
    <h1>BK Comment Thread</h1>
    <%= link_to "New comment",
                new_quote_path,
                class: "btn btn--secondary",
                data: { turbo_frame: dom_id(Quote.new) } %>
  </div>

  <%= turbo_frame_tag Quote.new %>

  <%= turbo_frame_tag "quotes" do %>
    <%= render @quotes %>
  <% end %>

</main>
